doctype html5
html
	head
		title= title
		link(rel='stylesheet',href='static/css/home.css')
		link(rel='stylesheet',href='static/bower_files/bootstrap/dist/css/bootstrap.css')
		link(rel='stylesheet' href='/static/css/cryptocoins-icons/webfont/cryptocoins.css')
		link(rel='stylesheet' href='/static/css/cryptocoins-icons/webfont/cryptocoins-colors.css')

	body
		block content
			div.container
				div#c_response
			form#test.container(onclick='time_f()')
				input(type="radio" name="time" value='week' checked='')
				| Week 
				input(type="radio" name="time" value='month') 
				| Month 
				input(type="radio" name="time" value='6months') 
				| 6 months 
				input(type="radio" name="time" value='year') 
				| Year 

			div#time_f.container
				canvas#myChart
			div.container

				select#cc_value(onchange='time_f()')
					each cc in ccoin_names
						option(value=cc.Name)= cc.FullName

				select#c_value(onchange='time_f()')
					each c in coin_names
						option(value=c)= c
				
				select#gtype_value(onchange='time_f()')
					option(value="line" checked='') Line
					option(value="bar") Bar
					option(value="radar") Radar
					option(value="polarArea") Polar Area
				
				select#clr_value(onchange='time_f()')
					option(value="rgba(39,196,255,0.6)" checked='') blue
					option(value="rgba(255,0,56,0.6)") red
					option(value="rgba(119,192,99,0.6)") green
					option(value="rgba(51,57,62,0.6)") Dark
			

	script(src="/static/bower_files/chart.js/dist/Chart.min.js")
	script(src="/static/bower_files/chart.js/dist/Chart.js")
	script(src='static/js/xml.js')
	script(src='static/js/looks.js')
	script(src='static/bower_files/bootstrap/assets/js/vendor/jquery-slim.min.js')
	script(src='static/css/font-awesome/css/font-awesome.min.css')
	
